!!! 5
%head
    %title Mootor demo
    %meta{:name=>"viewport", :content=>"width=device-width,initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"}
    %link{:href=>"../css/styles.css", :media=>"screen",  :rel=>"stylesheet"}
    %script{:src=>"../js/mootor.min.js",:type=>"text/javascript"}
    %script{:src=>"../js/plugins/nav.min.js",:type=>"text/javascript"}
    %script{:src=>"../js/plugins/app.min.js",:type=>"text/javascript"}
    %script{:src=>"../js/plugins/ui.min.js",:type=>"text/javascript"}

%body.main

    %header#moo-header
        %h1 Mootor demo
        %nav
            %a.moo-nav-back{:href=>"#moo-nav-back", :rel=>"back"} Back

    #main
        .moo-panel#home
            %nav
                %a.moo-nav{:href=>"#nav", :rel=>"nav"} Nav
                %a.moo-nav{:href=>"#ui", :rel=>"ui"} UI
                %a.moo-nav{:href=>"#gestures", :rel=>"gestures"} Gestures
                %a.moo-nav{:href=>"#camera", :rel=>"camera"} Camera
                     
        .moo-panel#nav
        .moo-panel#item1
        .moo-panel#item2        
        .moo-panel#ui
        .moo-panel#gestures
        .moo-panel#camera

:javascript    
        
    (function($) {
    
        $(document).ready(function(){
        
           "use strict";
       
           // Navigation panels
           var myNav = $("#main").nav(),
       
           // Application
           myApp = $.app({
               views: [
                    "ui",
                    "nav",
                    "item1",
                    "item2",
                    "gestures",
                    "camera"
               ],
               nav: myNav
           });
           
           // Preload a view
           myApp.load(
                myApp.views[0],
                myNav.get("ui")
           );           
                                  
       });
       
    }(Mootor));
    

