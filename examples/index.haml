!!! 5
%head
    %title Mootor demo
    %meta{:name=>"viewport", :content=>"width=device-width,initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"}
    %meta{:name=>"apple-mobile-web-app-capable", :content=>"yes"}
    %meta{:"http-equiv"=>"Content-Type", "content"=>"text/html; charset=utf-8"}
    %link{:href=>"../css/styles.css", :media=>"screen",  :rel=>"stylesheet"}
    %script{:src=>"../js/mootor.js",:type=>"text/javascript"}
    %script{:src=>"../js/plugins/nav.js",:type=>"text/javascript"}
    %script{:src=>"../js/plugins/app.js",:type=>"text/javascript"}
    %script{:src=>"../js/plugins/ui.js",:type=>"text/javascript"}

%body.main
    %header#moo-header
        %h1 Mootor demo
        %nav
            %a.moo-nav-back{:href=>"#moo-nav-back"} Back

    #main.moo-panels
        #home.moo-panel
            %nav
                %a.moo-nav{:href=>"#nav"} Nav
                %a.moo-nav{:href=>"#ui"} UI
                %a.moo-nav{:href=>"#gestures"} Gestures
                     
        #nav.moo-panel
        #item1.moo-panel
        #item2.moo-panel       
        #ui.moo-panel
        #gestures.moo-panel

:javascript    
        
    (function($) {
    
        $(document).ready(function() {
        
           "use strict";
       
           // Navigation panels
           var myNav = $("#main").nav(),
       
           // Application
           myApp = $.app({
               path: "views",
               views: [
                    "ui",
                    "nav",
                    "item1",
                    "item2",
                    "gestures"
               ],
               nav: myNav
           });
           
           // Preload a view
           myApp.load(
                myApp.get("ui"),
                myNav.get("ui")
           );                  
                                  
       });
       
    }(Mootor));
    

