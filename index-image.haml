                        %li.moo-image-wrapper
                            .moo-image.moo-active
                                %img{ :src=>"img/tmp/sample3.jpg", :alt=>"image 3"}
                        %li.moo-image-wrapper
                            .moo-image
                                %img{ :src=>"img/tmp/sample4.jpg", :alt=>"image 4"}
                        %li.moo-image-wrapper
                            .moo-image
                                %img{ :src=>"img/tmp/sample5.jpg", :alt=>"image 5"}
:javascript    

       $(document).ready(function(){
       
           "use strict";
       
           // Navigation panels
           var myNav = $("#panels").nav(),
       
           // Application
           myApp = $.app({
               views: [
                    "ui",
                    "nav",
                    "item1",
                    "item2"
               ],
               nav: myNav
           });
           
           // Preload a view
           myApp.load(myApp.views[0], myNav.get("ui"));           
                                  
       });
