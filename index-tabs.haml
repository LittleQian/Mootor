%head
    %title Mootor demo
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"}
    %link{:href=>"css/styles.css", :media=>"screen",  :rel=>"stylesheet"}
    %script{:src=>"js/mootor.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/nav.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/app.js",:type=>"text/javascript"}
%body.main

    %header#moo-header.moo-header
        %h1 Mootor demo
        %nav
            %a.moo-nav-back{:href=>"", :rel=>"back"} Back

    #panels    
        .moo-panel#home
            %nav
                %a.moo-nav{:href=>"", :rel=>"nav"} Nav
                %a.moo-nav{:href=>"", :rel=>"ui"} UI
                %a.moo-nav{:href=>"", :rel=>"tabs"} Tabs nav
                    
        .moo-panel#ui
        .moo-panel#nav
        
        .moo-panel#tabs
            .moo-nav-tabs-container
                %nav.moo-nav-tabs-header
                    %a.moo-tab.moo-active{:rel=>""}
                        Tab 1
                    %a.moo-tab{:rel=>""} 
                        Tab 2
                    %a.moo-tab{:rel=>""} 
                        Tab 3
                .moo-nav-tabs-content
                    .moo-tab-content.moo-active
                        %p This is some random content paragraph for the first tab.
                        .moo-sample-icon
                            .moo-ui-badge
                                2
                        .moo-sample-icon
                            .moo-ui-badge
                                22
                        .moo-sample-icon
                            .moo-ui-badge
                                522
                        .moo-sample-icon.medium
                            .moo-ui-badge
                                22
                        .moo-sample-icon.medium
                            .moo-ui-badge
                                2
                        .moo-sample-icon.small
                            .moo-ui-badge
                                22
                        .moo-sample-icon.small
                            .moo-ui-badge
                                2
                    .moo-tab-content
                        %p This is the second tab, and it's content it is also a paragraph.
                    .moo-tab-content
                        %p This is the third tab.
            
:javascript    
       $(document).ready(function(){
       
           "use strict";
       
           // Navigation panels
           var myNav = $("#panels").nav(),
       
           // Application
           myApp = $.app({
               views: [
                    "ui",
                    "nav",
                    "item1",
                    "item2"
               ],
               nav: myNav
           });
           
           // Preload a view
           myApp.load(myApp.views[0], myNav.get("ui"));           
           
       });
