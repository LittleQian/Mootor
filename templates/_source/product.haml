%head
    %title  Merlina Textil, arte en macram&eacute;
    %link{:href=>"css/styles.css", :media=>"screen", :rel=>"stylesheet"}
    :javascript
        $(document).ready(function() {
            $(".container.fancybox a").click(function() {
                  $.fancybox({
                      'titlePosition'   : 'inside',
                      'transitionIn'    : 'none',
                      'transitionOut'   : 'none',
                      'autoDimensions'  : true,
                      'overlayColor'      : '#000',
                      'overlayOpacity'  : 0.5,
                      'href'              : this.href
                  });
                  return false ;
            });
            $(".container.fancybox .pager").css("display","none");
            $(".container.fancybox .img").mouseover(function() {
                $(".container.fancybox .pager").css("display","block");
            });
            $(".container.fancybox .img").mouseout(function() {
                $(".container.fancybox .pager").css("display","none");
            });
            $(".container.fancybox .pager").mouseover(function() {
                $(".container.fancybox .pager").css("display","block");
            });
        });
%body.main
    .container.fancybox
        .content
            %a.img{:href=>"{{ next_item.category.name }}/{{ next_item.name }}.html"}             
                %img{:src=>'{% thumbnail product.image "640x570" %}'}       
            .pager
                %a.prev{:href=>"{{ prev_item.category.name }}/{{ prev_item.name }}.html"}
                    %span Anterior
                %a.next{:href=>"{{ next_item.category.name }}/{{ next_item.name }}.html"}
                    %span Siguiente
                           
            %h2 {{ product.title }}
            .info
                %p.description
                    {{ product.description|linebreaks }}
                    /20cm x 20cm x 20cm
                    /Macram&eacute;e
                    /A&ntilde;o 2010
