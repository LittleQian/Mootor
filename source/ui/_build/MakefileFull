PACKAGE=ui
VERSION=lastest
RELEASE_DIR=_release
COPY_DIR=../../js/plugins
RELEASE_FILE= $(PACKAGE)-$(VERSION).js
RELEASE_FILE_MIN= $(PACKAGE)-$(VERSION).min.js
COPY_FILE=$(PACKAGE).js
COPY_FILE_MIN=$(PACKAGE).min.js

all:
	@@echo "Building..."
	@@cat js/_header.js\
	      js/templates.js\
	      js/overlay.js\
	      js/input.js\
	      js/switch.js\
	      js/checkbox.js\
	      js/radio.js\
	      js/select.js\
	      js/date.js\
	      js/time.js\
	      js/text.js\
	      js/textarea.js\
	      js/camera.js\
	      js/simpleCamera.js\
	      js/map.js\
	      js/ui.js\
	      js/_footer.js\
	      > $(RELEASE_DIR)/$(RELEASE_FILE)
	@@echo "Build completed."
	@@cp $(RELEASE_DIR)/$(RELEASE_FILE) $(COPY_DIR)/$(COPY_FILE)
	@@echo "Build completed."

	@@java -jar ../_tools/yuicompressor.jar $(RELEASE_DIR)/$(RELEASE_FILE) -o $(RELEASE_DIR)/$(RELEASE_FILE_MIN)  
	@@echo "Minifying..."
	@@cp $(RELEASE_DIR)/$(RELEASE_FILE_MIN) $(COPY_DIR)/$(COPY_FILE_MIN)

