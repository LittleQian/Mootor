%head
    %title Mootor demo
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"}
    %link{:href=>"css/styles.css", :media=>"screen",  :rel=>"stylesheet"}
    %script{:src=>"js/mootor.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/nav.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/app.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/ui.js",:type=>"text/javascript"}
%body.main

    %header#moo-header.moo-header
        %h1 Mootor demo
        %nav
            %a.moo-nav-back{:href=>"", :rel=>"back"} Back

    #panels    
        .moo-panel#home
            %nav
                %a.moo-nav{:href=>"", :rel=>"nav"} Nav
                %a.moo-nav{:href=>"", :rel=>"ui"} UI
                %a.moo-nav{:href=>"", :rel=>"sprites"} Sprites
                     
        .moo-panel#ui
        .moo-panel#nav
        
        .moo-panel#sprites
            .moo-sample-icon.arrow
                .moo-ui-badge
                    2
            .moo-sample-icon.bell
                .moo-ui-badge
                    22
            .moo-sample-icon.burst
                .moo-ui-badge
                    522
            .moo-sample-icon.medium.cancel
                .moo-ui-badge
                    22
            .moo-sample-icon.medium.checkbox
                .moo-ui-badge
                    2
            .moo-sample-icon.medium.grid
                .moo-ui-badge
                    22
            .moo-sample-icon.medium.close
                .moo-ui-badge
                    3

:javascript    

       $(document).ready(function(){
       
           "use strict";
       
           // Navigation panels
           var myNav = $("#panels").nav(),
       
           // Application
           myApp = $.app({
               views: [
                    "ui",
                    "nav",
               ],
               nav: myNav
           });
           
           // Preload a view
           // myApp.load(myApp.views[0], myNav.get("ui"));           
                                  
