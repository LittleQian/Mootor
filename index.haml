!!! 5
%head
    %title Mootor demo
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"}
    %link{:href=>"css/styles.css", :media=>"screen",  :rel=>"stylesheet"}
    %script{:src=>"js/mootor.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/nav.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/app.js",:type=>"text/javascript"}
    %script{:src=>"js/plugins/ui.js",:type=>"text/javascript"}
    %script{:src=>"phonegap/cordova-1.9.0.js",:type=>"text/javascript"}

%body.main

    %header#moo-header.moo-header
        %h1 Mootor demo
        %nav
            %a.moo-nav-back{:href=>"", :rel=>"back"} Back

    #panels    
        .moo-panel#home
            %nav
                %a.moo-nav{:href=>"", :rel=>"nav"} Nav
                %a.moo-nav{:href=>"", :rel=>"ui"} UI
                %a.moo-nav{:href=>"", :rel=>"gestures"} Gestures
                %a.moo-nav{:href=>"", :rel=>"camera"} Camera
                     
        .moo-panel#ui
        .moo-panel#nav
        .moo-panel#item1
        .moo-panel#item2        
        .moo-panel#gestures
        .moo-panel#camera

:javascript    

       $(document).ready(function(){
       
           "use strict";
       
           // Navigation panels
           window.myNav = $("#panels").nav();
       
           // Application
           var myApp = $.app({
               views: [
                    "ui",
                    "nav",
                    "item1",
                    "item2",
                    "gestures",
                    "camera"
               ],
               nav: myNav
           });
           
           // Preload a view
           myApp.load(myApp.views[0], myNav.get("ui"));           
                                  
       });
